extends layout

block content
  //Form to create the package and store it in the database
  .container-fluid.rounded.shadow-lg.col-lg-6.col-sm-12.d-flex.flex-column
    h2.align-self-center(style="color: white") Create a new Package
    form(method='POST' action='/')
      .form-floating.m-3
        input#exampleFormControlInput1.form-control(type='number' placeholder='ID' name='id')
        label.form-label(for='exampleFormControlInput1') Enter ID
      .form-floating.m-3
        input#exampleFormControlInput1.form-control(type='text' placeholder='Enter image URL' name='imgsrc')
        label.form-label(for='exampleFormControlInput1') Enter Image Source
      .form-floating.m-3
        textarea#floatingTextarea.form-control(type='text' placeholder='Leave a comment here' name='imgtitle')
        label(for='floatingTextarea') Enter Image Title
      .form-floating.m-3
        input#posturlid.form-control(placeholder='Post slug' name='pagesource')
        label(for='posturlid') Enter Page URL
      .form-floating.m-3
        textarea#floatingTextarea.form-control(type='text' placeholder='Leave a comment here' name='packagedetail')
        label(for='floatingTextarea') Enter Travel Package Detail  
      .d-grid.mt-3.mb-3.gap-3.col-6.mx-auto
        button.btn.btn-primary.m-3(type='submit') Submit
    
    if errors 
      ul
        each error in errors 
          li.alert.alert-danger.m3=error 
      